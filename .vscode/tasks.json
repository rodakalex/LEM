{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "CMake Configure",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-G", "Ninja", 
          ".."
        ],
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build with Ninja",
        "type": "shell",
        "command": "ninja",
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "dependsOn": "CMake Configure"
      }
    ]
}
